<%= simple_form_for @order do |form| %>
  <%= form.simple_fields_for :order_detail do |f| %>
    <% if user_signed_in? %>
      <%= render 'orders/signed_form', f: f %>  
    <% elsif %>
      <%= render 'orders/form', f: f %>
    <% end %>

    <%= f.simple_fields_for :address do |ff| %>
      <%= ff.input :country, priority: ["UA"] %>
      <%= ff.input :city %>
      <%= ff.input :street %>
      <%= ff.input :comment, as: :text %>
    <% end %>
  <% end %>
  <%= form.button :submit, class: 'btn-primary' %>
<% end %>
