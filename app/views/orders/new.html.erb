<%= simple_form_for @order do |form| %>
  <%= form.simple_fields_for :order_detail do |order_detail_form| %>
    <% if !user_signed_in? %>
      <%= render 'orders/fields', f: order_detail_form %>
    <% end %>

    <%= order_detail_form.simple_fields_for :address do |address_form| %>
      <%= address_form.input :country, priority: ["UA"] %>
      <%= address_form.input :city %>
      <%= address_form.input :street %>
      <%= address_form.input :comment, as: :text %>
    <% end %>
  <% end %>
  <%= form.button :submit, class: 'btn-primary' %>
<% end %>
