<div class="w-full max-w-xs">
	<h1 class="font-hairline mb-6 text-center">Sign Up</h1>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
		html: { class: "bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email, required: true, autofocus: true,
		input_html: { autocomplete: "email", placeholder: "user@example.com" }	%>
  <%= f.input :first_name, required: true,
		input_html: { placeholder: "First_name" } %>
  <%= f.input :last_name, required: true,
		input_html: { placeholder: "Last_name" } %>
  <%= f.input :phone, required: true %>

  <%= f.input :password, required: true,
		input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation, required: true,
		input_html: { autocomplete: "new-password", class: "form-confirmation" } %>
  <%= f.button :submit, "Sign Up", class: "btn-primary" %>
  <%= render "devise/shared/links" %>
<% end %>
</div>
